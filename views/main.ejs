<body class="background">
  <!--**********  NAVBAR SECTION ***********-->
  <%- include('partials/navbar') %>

  <!--**********  MAIN BODY SECTION *********  -->
  <section class="header">
    <div class="bg-inner">
    </div>
    <div class="overlay"></div>
    <div class="text text-center">
      <h1>
        CRM Genie
      </h1>
      <h3>
        <br>
        Work is Done, <span class="underline">
          Period</span>.
      </h3>

      <a class="Register btn btn-primary btn-lg" href="/register">Register</a>

    </div>


  </section>
  <!-- customer service -->
  <section id="features">
    <div class="row g-4">
      <div class="text-center col-lg-4">
