<%- layout('layout/dashboard-template')%>
<!-- BREADCRUMBS -->
<div class="">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/dashboard/customers">Customers</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>
</div>
<!-- MAIN -->
<div class="white rounded p-3">
<h1 class="mb-3">Edit a Customer</h1>
<div class="d-flex justify-content-center">
<form class="reg-form border" action="/dashboard/customers/<%=customer._id %>?_method=PUT" method="POST">
  <div class="mb-3">
  <label for="name" class="form-label">Customer Name</label>
  <input type="text" name="customer[name]" id="name"
  value="<%=customer.name%>" placeholder="Customer's name">
  </div>

  <div class="mb-3">
  <label for="tel" class="form-label">Phone Number</label>
  <input type="tel" name="customer[tel]" id="tel"
  value="<%=customer.tel%>">
  </div>

  <div class="mb-3">
  <label for="email" class="form-label">Email</label>
  <input type="email" name="customer[email]"
  id="email" value="<%=customer.email%>">
  </div>

  <div class="mb-5">
  <label for="address" class="form-label">Address</label>
  <input type="text" name="customer[address]"
  id="address" value="<%=customer.address%>" placeholder="Address">
  </div>

  <button class="submitBtn btn-gradient py-2">Submit</button>
</form>
</div>
</div>
