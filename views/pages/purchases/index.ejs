<%- layout('layout/dashboard-template')%>
<!-- BREADCRUMBS -->
<div class="">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Purchases</li>
  </ol>
</nav>
</div>

<!-- MAIN -->
<div class="container-fluid">

<div class="rounded border p-3 mb-3 d-flex justify-content-between">
  <div class="date-supplier d-flex align-items-center no-wrap">
    <label for="date"><h5>Date:</h5></label>
    <input type="text">
    <button class=""><i class="fa-solid fa-calendar-days"></i></button>
  </div>
<div class="">
  <h5>Supplier: $supplier</h5>
</div>
</div>

<div class="purchase-body d-flex justify-content-between">
  <!-- left side for list of ordered items -->
  <div class="orderItems rounded border p-3">
    <div class="product-header border-bottom">
      <h5 class="product-title text-center px-2">ITEM</h5>
      <h5 class="cost text-center px-2">PRICE</h5>
      <h5 class="quantity text-center px-2">QUANTITY</h5>
      <h5 class="total text-center px-2">TOTAL</h5>
    </div>
    <div class="products">
<!-- populated using javascripts -->

    </div>
  </div>

  <!-- right side for adding orders -->
  <div class="addOrders rounded border p-3">
    <div class="searchBar d-flex no-wrap mb-3">
      <input type="text" id="search-term">
      <button class="searchIcon"><i class="fa fa-search"></i></button>
    </div>
    <div class="">
      <ul class="list-group">
          <% for (let product of products) { %>
  <li class="list-group-item d-flex justify-content-between"><span><%= product.name %></span><button class="addBtn" id="addBtn"><i class="fa-solid fa-square-plus"></i></button></li>
    <% } %>
</ul>
    </div>
  </div>
</div>

</div>
