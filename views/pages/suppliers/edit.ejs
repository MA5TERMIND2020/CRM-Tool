<%- layout('layout/dashboard-template')%>
<!-- BREADCRUMBS -->
<div class="">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="/dashboard/suppliers">Suppliers</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>
</div>

<div class="white rounded p-3">
<h1 class="mb-3">Edit Supplier</h1>
<div class="d-flex justify-content-center">
<form class="reg-form border" action="/dashboard/suppliers/<%=supplier._id %>?_method=PUT" method="POST">
  <div class="mb-3">
  <label for="name" class="form-label">Supplier Name</label>
  <input type="text" name="supplier[name]" value="<%=supplier.name%>" required>
  </div>

  <div class="mb-3">
  <label for="tel" class="form-label">Phone Number</label>
  <input type="tel" name="supplier[tel]" value="<%=supplier.tel%>" required>
  </div>

  <div class="mb-3">
  <label for="email" class="form-label">Email</label>
  <input type="email" name="supplier[email]" value="<%=supplier.email%>" required>
  </div>

  <div class="mb-5">
  <label for="address" class="form-label">Address</label>
  <input type="text" name="supplier[address]" value="<%=supplier.address%>" required>
  </div>

  <button class="submitBtn btn-gradient py-2">Submit</button>
</form>
</div>
</div>
