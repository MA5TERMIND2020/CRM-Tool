<%- layout('layout/dashboard-template')%>
<h1 class="mb-3">Edit Supplier</h1>
<form class="reg-form p-3 border" action="/dashboard/suppliers?_method=PUT" method="POST">
  <div class="mb-2">
  <label for="name" class="form-label">Supplier Name</label>
  <input type="text" class="form-control" name="supplier[name]" value="<%=supplier.name%>" required>
  </div>

  <div class="mb-2">
  <label for="tel" class="form-label">Phone Number</label>
  <input type="tel" class="form-control" name="supplier[tel]" value="<%=supplier.tel%>" required>
  </div>

  <div class="mb-2">
  <label for="email" class="form-label">Email</label>
  <input type="email" class="form-control" name="supplier[email]" value="<%=supplier.email%>" required>
  </div>

  <div class="mb-5">
  <label for="address" class="form-label">Address</label>
  <input type="text" class="form-control" name="supplier[address]" value="<%=supplier.address%>" required>
  </div>

  <button class="btn btn-primary btn-sm">Submit</button>
</form>
