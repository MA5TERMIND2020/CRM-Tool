<!--**********  MAIN SECTION ***********-->
<section class="container-fluid height d-flex justify-content-center align-items-center">
<div class="login-inner py-3 px-4">
  <h1 class="text-center mb-3">Get Started For Free!</h1>
  <form action="/users/register" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="name" class="form-control" name="user[name]" id="name" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" name="user[email]" id="email" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="user[password]" id="password">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>

</section>

